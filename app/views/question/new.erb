  <input type="text" name="description" placeholder="Question">
  <br>
  <hr>
  <input type="text" name="option1" placeholder="Choice 1">
  <br>
  <input type="text" name="option2" placeholder="Choice 2">
  <br>
  <input type="text" name="option3" placeholder="Choice 3">
  <br>
  <input type="text" name="option4" placeholder="Choice 4">
